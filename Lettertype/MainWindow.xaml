<Window x:Class="Lettertype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lettertype"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="95"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="39.2"/>
        </Grid.RowDefinitions>

        <!--<TextBox x:Name="textboxTextInput" Height="361" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="10,10,0,0" TextWrapping="Wrap" Text="" Width="773"/>-->
        <Button x:Name="buttonChangeFont" Content="Change" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="9.6,10.2,0,0" VerticalAlignment="Top" Width="75" Click="ButtonChangeFont_Click"/>
        <RichTextBox x:Name="richttextboxTextInput" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Height="361" Margin="10">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
